#pragma config(Sensor, S3,     lightSensor,    sensorEV3_Color)
#pragma config(Sensor, S2,     touchSensor,    sensorEV3_Touch)
#pragma config(Sensor, S1,     ultraSensor,    sensorEV3_Ultrasonic)
//*!!Code automatically generated by 'ROBOTC' configuration wizard  !!*//
int FollowLine(int distance);

task main()
{
	int object=0;
	unsigned long distance=1;
	object=FollowLine(distance);
}

int FollowLine(int distance)
{
		int currentDistance=0;
		int object=0;

		while(distance<7680)
	{
		currentDistance=SensorValue[ultraSensor];
		if(SensorValue(lightSensor)<45)
		{
		motor[motorC]=45;
		motor[motorB]=27;
		wait1Msec(1);
		}
		else
		{
		motor[motorC]=27;
		motor[motorB]=45;
		wait1Msec(1);
		}

	distance = nPgmTime;

	if ((currentDistance)< 30)
	{
	object=1;
	distance=7680;
	}
}
return (object);
}
